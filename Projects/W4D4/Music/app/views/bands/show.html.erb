
<style media="screen">
  #band_name{
    font-size: 50pt;
    font-style: oblique;
  }
</style>

<body id="band_name">
  <h2><%= @band.name %><h2>
  <h3>Albums</h3>
  <ul>
    <% @band.albums.each do |album| %>
      <li><a href="<%= album_url(album) %>"><%= album.title %></a></li>
    <% end %>
  </ul>
</body>
